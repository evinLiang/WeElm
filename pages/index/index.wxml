<!--index.wxml-->
<view class="location">
  <text>当前位置:</text> 
  <text>广州</text> 
  <text class="change">[切换地址]</text>
</view>
<van-search
  value="{{ keyWord }}"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:search="onSearch"
>
  <view slot="action" bind:tap="onSearch">搜索</view>
</van-search>
<view class='container'>
  <view class='food-list'>
    <view 
      class='item' 
      wx:for="{{foodList}}" 
      wx:for-index="index" 
      wx:for-item="item" 
      wx:key="item"
    >
      <view class="left">
        <image class="foodImg" src="{{item.foodImgSrc}}"></image>
      </view>
      <view class="right">
        <view>{{item.name}}</view>
        <view><van-rate gutter="0" size="10" value="{{ item.rate }}" /></view>
        {{item.distributionFee}}
        {{item.distributionTime}}
      </view>
    </view>
  </view>
</view>